{{ ansible_managed | comment }}

[Unit]
Description=jamulus headless server
After=network-online.target

[Service]
Type=simple
User={{ _jamulus_system_user }}
Group={{ _jamulus_system_group }}
ExecStart={{ _jamulus_binary_install_dir }}/jamulus \
{% for collector in jamulus_enabled_collectors -%}
{%   if not collector is mapping %}
    --collector.{{ collector }} \
{%   else -%}
{%     set name, options = (collector.items()|list)[0] -%}
    --collector.{{ name }} \
{%     for k,v in options|dictsort %}
    --collector.{{ name }}.{{ k }}={{ v | quote }} \
{%     endfor -%}
{%   endif -%}
{% endfor -%}
{% for collector in jamulus_disabled_collectors %}
    --no-collector.{{ collector }} \
{% endfor %}
{% if jamulus_tls_server_config | length > 0 or jamulus_http_server_config | length > 0 or jamulus_basic_auth_users | length > 0 %}
    --web.config=/etc/jamulus/config.yaml \
{% endif %}
    --web.listen-address={{ jamulus_web_listen_address }} \
    --web.telemetry-path={{ jamulus_web_telemetry_path }}

SyslogIdentifier=jamulus
Restart=always
RestartSec=1
StartLimitInterval=0

{% for m in ansible_mounts if m.mount == '/home' %}
ProtectHome=read-only
{% else %}
ProtectHome=yes
{% endfor %}
NoNewPrivileges=yes

{% if jamulus_systemd_version | int >= 232 %}
ProtectSystem=strict
ProtectControlGroups=true
ProtectKernelModules=true
ProtectKernelTunables=yes
{% else %}
ProtectSystem=full
{% endif %}

[Install]
WantedBy=multi-user.target
